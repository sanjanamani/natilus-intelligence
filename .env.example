# Natilus Intelligence Dashboard - Environment Variables
# Copy this file to .env and fill in your actual credentials

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# GitHub Token (Optional but recommended - increases API rate limits)
# Get token from: https://github.com/settings/tokens
# Needs 'public_repo' scope only
GITHUB_TOKEN=your_github_personal_access_token_here

# Email Configuration (Optional - for daily CEO brief)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
CEO_EMAIL=aleksey@natilus.com

# Scraper Schedule (Optional)
# How often to run scrapers (in hours)
SCRAPER_INTERVAL_HOURS=6
